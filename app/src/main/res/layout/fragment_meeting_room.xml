<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andela.mrm.MeetingRoomFragment">


    <TextView
        android:id="@+id/select_meeting_room_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="453dp"
        android:layout_marginEnd="367dp"
        android:layout_marginStart="365dp"
        android:layout_marginTop="121dp"
        android:gravity="center"
        android:text="@string/meeting_rooms_text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192" />

    <GridLayout
        android:id="@+id/meeting_rooms_grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="143dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="197dp"
        android:columnCount="5"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/mayaButton"
            android:layout_margin="15dp"
            android:text="Maya"
            android:textAllCaps="false"
            android:textColor="#5275f4"
            android:textSize="20sp"
            android:background="@drawable/btn_meeting_room"
            />

        <Button
            android:id="@+id/wallStreetButton"
            android:layout_margin="15dp"
            android:text="Wall Street"
            android:textAllCaps="false"
            android:textColor="#5275f4"
            android:textSize="20sp"
            android:background="@drawable/btn_meeting_room"
            />

        <Button
            android:id="@+id/ubuntuButton"
            android:layout_margin="15dp"
            android:text="Ubuntu"
            android:textAllCaps="false"
            android:textColor="#5275f4"
            android:textSize="20sp"
            android:background="@drawable/btn_meeting_room"
            />

        <Button
            android:id="@+id/asoButton"
            android:layout_margin="15dp"
            android:text="Aso"
            android:textAllCaps="false"
            android:textColor="#5275f4"
            android:textSize="20sp"
            android:background="@drawable/btn_meeting_room"
            />

        <Button
            android:id="@+id/charleyButton"
            android:layout_margin="15dp"
            android:text="Charley"
            android:textAllCaps="false"
            android:textColor="#5275f4"
            android:textSize="20sp"
            android:background="@drawable/btn_meeting_room"
            />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
